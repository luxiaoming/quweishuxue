<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:orientation="vertical"
	android:background="@drawable/dialog_details_bg"
	android:padding="6.0dip"
	android:layout_width="300.0dip"
	android:layout_height="wrap_content"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout
		android:gravity="center"
		android:id="@+id/dialog_title_layout"
		android:background="@drawable/dialog_details_title"
		android:paddingLeft="10.0dip"
		android:paddingTop="5.0dip"
		android:paddingBottom="5.0dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="3.0dip"
		android:layout_marginRight="3.0dip">
		<TextView
			android:textSize="22.0sp"
			android:textColor="@color/white"
			android:id="@+id/dialog_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5.0dip"
			android:text="模式选择" />
	</LinearLayout>
	<LinearLayout
		android:gravity="center"
		android:id="@+id/dialog_body"
		android:paddingLeft="15.0dip"
		android:paddingTop="10.0dip"
		android:paddingRight="15.0dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:textSize="20.0sp"
			android:textColor="#ffffa500"
			android:id="@+id/dialog_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="TEST" />
	</LinearLayout>
	<ImageView
		android:id="@+id/dialog_body_bottom_divider"
		android:background="#ffdddddd"
		android:layout_width="fill_parent"
		android:layout_height="1.0px"
		android:layout_marginLeft="3.0dip"
		android:layout_marginTop="10.0dip"
		android:layout_marginRight="3.0dip" />
	<LinearLayout
		android:gravity="center"
		android:id="@+id/dialog_bottom_buttons"
		android:padding="10.0dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button
			android:id="@+id/button_ok"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5.0dip"
			android:text="确定"
			style="@style/button_2_style" />
	</LinearLayout>
</LinearLayout>